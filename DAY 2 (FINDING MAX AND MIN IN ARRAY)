#include<stdio.h>
int main()
{
int s;
int a[50];
int min,max;
printf("Enter number of elements: ");
scanf("%d",&s);
for(int i=0;i<s;i++)
{
	printf("\nenter %d number:",i);
	scanf("%d",&a[i]);
}

for(int i=0;i<s;i++)
{
	min=a[0];
	if(min>a[i])
	{ 
	min=a[i];
	}
}
printf("\nmin value is %d",min);
for(int i=0;i<s;i++)
{
	max=a[0];
	if(max<a[i])
	{ 
	max=a[i];
	}
}
printf("\nmax value is %d",max);
}



OUTPUT
Enter number of elements: 5
enter 0 number:20
enter 1 number:37
enter 2 number:5
enter 3 number:21
enter 4 number:67

min value is 20
max value is 67
--------------------------------
Process exited after 14.83 seconds with return value 0
